{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "outDir": "lib",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "dist"]
}
